<?xml version="1.0" encoding="utf-8"?>

<!-- Inspo //http://richardmiller.co.uk/2011/07/07/dependency-injection-moving-from-basics-to-container -->

<rentatool>
    <dependencies>

        <!-- Controllers -->
        <dependency namespace="Rentatool\Application\Controllers" class="FishController">
            <dependencies>
                <dependency namespace="Rentatool\Application\Services" class="FishService"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Controllers" class="CaughtFishController">
            <dependencies>
                <dependency namespace="Rentatool\Application\Services" class="CaughtFishService"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Controllers" class="AuthorizationController">
            <dependencies>
                <dependency namespace="Rentatool\Application\Services" class="AuthorizationService"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Controllers" class="UserController">
            <dependencies>
                <dependency namespace="Rentatool\Application\Services" class="UserService"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Controllers" class="DatabaseController">
            <dependencies>
                <dependency namespace="Rentatool\Application\Services" class="DatabaseService"/>
            </dependencies>
        </dependency>


        <!-- Services -->
        <dependency namespace="Rentatool\Application\Services" class="CaughtFishService">
            <dependencies>
                <dependency namespace="Rentatool\Application\Mappers" class="CaughtFishMapper"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Services" class="FishService">
            <dependencies>
                <dependency namespace="Rentatool\Application\Mappers" class="FishMapper"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Services" class="UserService">
            <dependencies>
                <dependency namespace="Rentatool\Application\Mappers" class="UserMapper"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Services" class="AuthorizationService">
            <dependencies>
                <dependency namespace="Rentatool\Application\Services" class="UserService"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Services" class="DatabaseService">
            <dependencies>
                <dependency namespace="Rentatool\Application\Mappers" class="DatabaseMapper"/>
            </dependencies>
        </dependency>


        <!-- Mappers -->
        <dependency namespace="Rentatool\Application\Mappers" class="CaughtFishMapper">
            <dependencies>
                <dependency namespace="Rentatool\Application\ENFramework\Models" class="DatabaseConnection"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Mappers" class="FishMapper">
            <dependencies>
                <dependency namespace="Rentatool\Application\ENFramework\Models" class="DatabaseConnection"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Mappers" class="UserMapper">
            <dependencies>
                <dependency namespace="Rentatool\Application\ENFramework\Models" class="DatabaseConnection"/>
            </dependencies>
        </dependency>

        <dependency namespace="Rentatool\Application\Mappers" class="DatabaseMapper">
            <dependencies>
                <dependency namespace="Rentatool\Application\ENFramework\Models" class="DatabaseConnection"/>
            </dependencies>
        </dependency>


        <!-- Others -->
        <dependency namespace="Rentatool\Application\ENFramework\Models" class="DatabaseConnection">
            <dependencies/>
        </dependency>

    </dependencies>
</rentatool>
